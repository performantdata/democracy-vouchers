{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://performantdata.github.io/democracy-vouchers/schema/election-race.schema.json",
  "title": "Election race",
  "description": "A race for a government office in an election",
  "type": "object",
  "required": [ "office", "candidates" ],
  "properties": {
    "office": {
      "description": "The name of the government office that is up for election",
      "type": "string",
      "minLength": 2
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [],
        "properties": {
        }
      }
    }
  }
}
